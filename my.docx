            // Calculate tilt
            const centerX = rect.width / 2;
            const centerY = rect.height / 2;
            
            const rotateX = ((y - centerY) / 20) * -1;
            const rotateY = (x - centerX) / 20;
            
            // Apply tilt effect with smooth transition
            element.style.transition = 'transform 0.1s ease-out';
