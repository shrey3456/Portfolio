                margin: 2rem auto;
                max-height: 350px;
            }
            
            .profile-image {
                max-width: 250px;
                max-height: 300px;
            }
            
            .tech-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .certificate-grid {
                grid-template-columns: 1fr;
            }
        }
        
        @media (max-width: 480px) {
            .tech-grid {
                grid-template-columns: repeat(1, 1fr);
            }
        }

        /* Enhanced image handling for transparent backgrounds */
        .profile-container {
            position: relative;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .profile-image-wrapper {
            position: relative;
            overflow: hidden;
            margin: 0 auto;
        }

        /* Improved profile image handling with background forcing */
        .profile-image {
            max-width: 400px;
            max-height: 500px;
            object-fit: contain;
            filter: drop-shadow(0px 10px 25px rgba(0,0,0,0.3));
            position: relative;
            z-index: 2;
            background-color: transparent !important;
        }

